<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>

  <%= f.fields_for :ingredients do |g| %>
    <br>
    Ingredient <br>
    <%= g.label :name %>
    <%= g.text_field :name %>
    <%= g.label :quantity %>
    <%= g.text_field :quantity %>
    <br>
  <% end %>

  <%= f.submit %>

<% end %>
